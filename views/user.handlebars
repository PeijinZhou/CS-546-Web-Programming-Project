<div id="personalInfo" class="row container">
    <fieldset>
        {{!-- <form> --}}
            <legend>Personal Information</legend>
            {{!-- <h2>Personal Information</h2> --}}
            <table class="table col">
                <tbody>
                    <tr>
                        <td>username</td>
                        <td>{{userName}}</td>
                    </tr>
                    <tr>
                        <td>email</td>
                        <td>{{userEmail}}</td>
                    </tr>
                    <tr>
                        <td>Registration Date</td>
                        <td>{{userRegistDate}}</td>
                    </tr>
                    <tr>
                        <td>Your Score</td>
                        <td>{{userScore}}</td>
                    </tr>
                </tbody>
            </table>
            <button id="personalInfoChangePasswordButton" class="btn btn-primary">change password</button>
    </fieldset>

</div>
<div id='changePassword' class="row container">
    <fieldset>
        <legend>Change Password</legend>
        <form id="changePasswordForm">
            <table class="table col">
                <tr>
                    <td><label for="changePasswordFormOldPassword">Password</label></td>
                    <td><input type="password" id="changePasswordFormOldPassword"></td>
                </tr>
                <tr>
                    <td><label for="changePasswordFormNewPassword">New Password</label></td>
                    <td><input type="password" id="changePasswordFormNewPassword"></td>
                </tr>
                <tr>
                    <td><label for="changePasswordFormNewPasswordCheck">Please input new password again</label></td>
                    <td><input type="password" id="changePasswordFormNewPasswordCheck"></td>
                </tr>
            </table>
            <button id="changePasswordFormSubmitButton" class="btn btn-primary">submit change</button>
            <p id="changePasswordFormStatus" class="text-danger"></p>
        </form>
    </fieldset>
</div>

<div id="questionsDiv" class="row container">
    <fieldset>
        <legend>Questions</legend>
        <div id="questionsSelector">
            <label for="questionsSortSelect">Sort: </label>
            <select id="questionsSortSelect">
                <option value="Date from new to old" selected="selected">Date from new to old</option>
                <option value="Answers number from high to low">Answers number from high to low</option>
            </select>
            <br>
            <label for="questionsLimitSelect">Limit: </label>
            <select id="questionsLimitSelect">
                <option value="10" selected="selected">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
            </select>
            <br>
        </div>
        <div id="userQuestionsList">
            {{#each userQuestionsList}}
            <article>
                <h2><a href="{{this.questionUrl}}">{{this.questionName}}</a></h2><br>
            </article>
            {{/each}}
        </div>
    </fieldset>
</div>
